#!/bin/bash

path="./*"

function compile()
{
    echo "Compiling $*"
    if [[ $* == *.c ]]
    then
	gcc `pkg-config --cflags --libs opencv` -o `basename $* .c` $* 
    elif [[ $* == *.cpp ]]
    then
	g++ `pkg-config --cflags --libs opencv` -o `basename $* .cpp` $*
    else
	echo "Error for file format of" $1
    fi
}

if [ $# -ge 1 ]
then
    for file in $@
    do
        compile $file
    done
    echo "Compile Over"
    exit 0
fi
for dir in ${path}
do
    compile "${dir}"
done

echo "Compile Over"

